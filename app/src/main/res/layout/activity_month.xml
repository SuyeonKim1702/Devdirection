<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#f7fcff"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView

        android:layout_marginTop="30dp"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="4sp"
        android:text="분석 결과 모아보기"
        android:textColor="@color/colorPrimary"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText" />
    <ImageView
        android:onClick="monthOnClick"
        android:id="@+id/go_to_previous_month"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/arrow"></ImageView>

</RelativeLayout>
    <View
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorPrimary">
    </View>
    <ImageView
        android:layout_marginTop="35dp"
        android:layout_marginStart="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bt_year">

    </ImageView>

    <HorizontalScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="13dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="21dp"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="3sp"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text=" 1월 " />

            <View
                android:layout_width="20dp"
                android:layout_height="match_parent"></View>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/fontstyle"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="3sp"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text=" 2월 " />

            <View
                android:layout_width="20dp"
                android:layout_height="match_parent"></View>

            <TextView
                android:id="@+id/march"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="3sp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:onClick="monthOnClick"
                android:text=" 3월 " />

            <View
                android:layout_width="20dp"
                android:layout_height="match_parent"></View>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="3sp"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text=" 4월 " />

            <View
                android:layout_width="20dp"
                android:layout_height="match_parent"></View>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/fontstyle"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="3sp"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text=" 5월 " />

            <View
                android:layout_width="20dp"
                android:layout_height="match_parent"></View>

            <TextView
                android:id="@+id/june"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="3sp"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                android:textStyle="bold"

                android:text=" 6월 " />

            <View
                android:layout_width="20dp"
                android:layout_height="match_parent"></View>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="3sp"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text=" 7월 " />

            <View
                android:layout_width="20dp"
                android:layout_height="match_parent"></View>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/fontstyle"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="3sp"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="8월" />

            <View
                android:layout_width="20dp"
                android:layout_height="match_parent"></View>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="3sp"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="9월" />

            <View
                android:layout_width="20dp"
                android:layout_height="match_parent"></View>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="3sp"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="10월" />

            <View
                android:layout_width="20dp"
                android:layout_height="match_parent"></View>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/fontstyle"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="3sp"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="11월" />

            <View
                android:layout_width="20dp"
                android:layout_height="match_parent"></View>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="3sp"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="12월" />
            <View
                android:layout_width="20dp"
                android:layout_height="match_parent"></View>
        </LinearLayout>

    </HorizontalScrollView>
    <View
        android:layout_marginTop="4dp"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorPrimary"
        android:layout_marginStart="30dp">
    </View>
    <LinearLayout
        android:id="@+id/ll_dates"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/day_1"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:src="@drawable/bt_12day">

        </ImageView>
        <ImageView
            android:id="@+id/day_2"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:src="@drawable/bt_30day">

        </ImageView>
    </LinearLayout>

    <TextView
        android:id="@+id/month_1"
        android:visibility="invisible"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="26sp"
        android:textColor="@color/colorPrimary"
        android:lineSpacingExtra="-3sp"
        android:text="3월에는 총 2개의\n분석결과 리포트가 있습니다."
        />
    <ImageView
        android:visibility="invisible"
    android:id="@+id/month_2"
        android:onClick="monthOnClick"
    android:layout_marginEnd="30dp"
    android:layout_marginTop="30dp"
    android:layout_marginStart="30dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/bt_go_to_data_1">
</ImageView>
    <ImageView
        android:onClick="monthOnClick"
        android:visibility="invisible"
        android:id="@+id/month_3"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bt_go_to_data_2">
    </ImageView>

</LinearLayout>